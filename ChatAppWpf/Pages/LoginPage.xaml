<Page x:Class="ChatAppWpf.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatAppWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход в систему">

    <Grid Background="White">
        <Rectangle Fill="#FFEEEEEE" HorizontalAlignment="Center" Height="323" Stroke="Black" VerticalAlignment="Center" Width="292"/>
        
        <Label Content="Введите ник:" Margin="263,85,310,338"/>
        <TextBox x:Name="NicknameBox" HorizontalAlignment="Left" Margin="269,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>
        
        <Label Content="Введите IP:" Margin="263,141,310,282"/>
        <TextBox x:Name="IPAdressBox" HorizontalAlignment="Left" Margin="269,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>
        
        <Label Content="Введите порт:" Margin="263,198,316,225"/>
        <TextBox x:Name="PortBox" HorizontalAlignment="Left" Margin="269,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>
        
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="269,330,0,0" VerticalAlignment="Top" Height="32" Width="168" Click="ConnectButton_Click"/>


    </Grid>
</Page>
