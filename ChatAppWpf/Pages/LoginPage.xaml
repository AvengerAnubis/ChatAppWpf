<Page x:Class="ChatAppWpf.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatAppWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход в систему">

    <Grid Background="White">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <Rectangle Fill="#FFEEEEEE" HorizontalAlignment="Center" Height="323" Stroke="Black" VerticalAlignment="Center" Width="292" Grid.RowSpan="2"/>
            <StackPanel Orientation="Vertical" Margin="8">
                <Label Content="Введите ник:"  Padding="0,16,8,8"/>
                <TextBox x:Name="NicknameBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>

                <Label Content="Введите IP:"  Padding="0,16,8,8"/>
                <TextBox x:Name="IPAdressBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>

                <Label Content="Введите порт:" Padding="0,16,8,8"/>
                <TextBox x:Name="PortBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="221"/>


            </StackPanel>
            <Button Grid.Row="1" x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="8,0,0,0" VerticalAlignment="Center" Height="32" Width="168" Click="ConnectButton_Click"/>
        </Grid>
        

    </Grid>
</Page>
